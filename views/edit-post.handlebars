<article>
  <a class="btn" id="back-to-dashboard" href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="card-header" id="edit">
    Edit Post
  </h2>
  <form class="edit-post-form form-label container">
    <div class="form-input flex">
      <label for='post-title'>Title</label>
      <input class="card w-50 h-5" name="post-title" type="text" value="{{post.title}}" />
      <br>
      <label for='post-title'>Link</label>
      <input class="card w-50 h-5" name="post-url" type="text" value="{{post.post_url}}" />
    </div>
    <div class="form-input">
      <textarea class="w-100 card h-50" name='post-text' type="text">{{post.text}}</textarea>
    </div>
    <div>
      {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn w-25">Save post</button>
    <button type="button" class="delete-post-btn btn w-25">Delete post</button>
  </form>
</article>
<form class="comment-form card container form-input">
  <div class="container flex-column justify-center w-50 h-25">
    <textarea name="comment-body" class="card" id="edit-comment"></textarea>
  </div>
  <div>
    {{> comments post.comments}}
  <div class="container w-25">
    <button type="submit" class="btn w-100">add comment</button>
  </div>
  </div>
</form>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>